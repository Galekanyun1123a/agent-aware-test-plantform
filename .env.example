# ========================================
# Claude Code Agent 环境变量配置
# ========================================
# 复制此文件为 .env.local 并填入实际值

# ----------------------------------------
# Claude Code (AWS Bedrock) 配置
# ----------------------------------------
# 启用 AWS Bedrock（必须设置为 1）
CLAUDE_CODE_USE_BEDROCK=1
AWS_ACCESS_KEY_ID=*******
AWS_SECRET_ACCESS_KEY==*******
AWS_REGION=us-west-2
ANTHROPIC_DEFAULT_HAIKU_MODEL=us.anthropi=*******
ANTHROPIC_MODEL==*******
ANTHROPIC_DEFAULT_SONNET_MODEL==*******
ANTHROPIC_DEFAULT_OPUS_MODEL==*******
ANTHROPIC_SMALL_FAST_MODEL==*******
# 默认模型（可选，默认为 sonnet）
ANTHROPIC_DEFAULT_MODEL=sonnet

# ----------------------------------------
# 工作目录配置
# ----------------------------------------
# Claude Code 读写文件的工作目录
# 留空则使用项目目录下的 workspace 文件夹
WORKSPACE_PATH=

# ----------------------------------------
# 预览配置
# ----------------------------------------
# 预览服务地址（前端可访问）
# 需要在工作目录启动开发服务器（如 vite dev）
NEXT_PUBLIC_PREVIEW_URL=http://localhost:5173

# ----------------------------------------
# 开发配置（可选）
# ----------------------------------------
# 开发环境下输出详细日志
# NODE_ENV=development
